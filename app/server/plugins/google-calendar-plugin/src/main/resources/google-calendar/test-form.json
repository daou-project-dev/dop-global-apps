{
  "pluginId": "google-calendar",
  "tabs": [
    {
      "tabId": "calendar.list",
      "tabName": "캘린더 목록 조회",
      "description": "Google Calendar 목록을 조회합니다.",
      "controls": [],
      "api": {
        "method": "POST",
        "uri": "calendar.list"
      }
    },
    {
      "tabId": "events.list",
      "tabName": "일정 목록 조회",
      "description": "지정한 캘린더의 일정 목록을 조회합니다.",
      "controls": [
        {
          "controlType": "INPUT_TEXT",
          "label": "Calendar ID",
          "name": "calendarId",
          "placeholder": "primary",
          "required": true,
          "initialValue": "primary"
        }
      ],
      "api": {
        "method": "POST",
        "uri": "events.list"
      }
    },
    {
      "tabId": "events.create",
      "tabName": "일정 등록",
      "description": "지정한 캘린더에 새 일정을 등록합니다.",
      "controls": [
        {
          "controlType": "INPUT_TEXT",
          "label": "Calendar ID",
          "name": "calendarId",
          "placeholder": "primary",
          "required": true,
          "initialValue": "primary"
        },
        {
          "controlType": "INPUT_TEXT",
          "label": "일정 제목",
          "name": "summary",
          "placeholder": "회의",
          "required": true
        },
        {
          "controlType": "INPUT_TEXT",
          "label": "설명",
          "name": "description",
          "placeholder": "일정 설명",
          "required": false
        },
        {
          "controlType": "INPUT_TEXT",
          "label": "시작 시간",
          "name": "startDateTime",
          "placeholder": "2026-01-27 10:00",
          "required": true
        },
        {
          "controlType": "INPUT_TEXT",
          "label": "종료 시간",
          "name": "endDateTime",
          "placeholder": "2026-01-27 11:00",
          "required": true
        },
        {
          "controlType": "INPUT_TEXT",
          "label": "시간대",
          "name": "timeZone",
          "placeholder": "Asia/Seoul",
          "required": false,
          "initialValue": "Asia/Seoul"
        }
      ],
      "api": {
        "method": "POST",
        "uri": "events.create"
      }
    },
    {
      "tabId": "events.delete",
      "tabName": "일정 삭제",
      "description": "지정한 캘린더의 일정을 삭제합니다.",
      "controls": [
        {
          "controlType": "INPUT_TEXT",
          "label": "Calendar ID",
          "name": "calendarId",
          "placeholder": "primary",
          "required": true,
          "initialValue": "primary"
        },
        {
          "controlType": "INPUT_TEXT",
          "label": "Event ID",
          "name": "eventId",
          "placeholder": "일정 ID",
          "required": true
        }
      ],
      "api": {
        "method": "POST",
        "uri": "events.delete"
      }
    }
  ]
}

{
  "pluginId": "ms365-calendar",
  "tabs": [
    {
      "tabId": "me.get",
      "tabName": "내 프로필 조회",
      "description": "현재 로그인한 사용자의 프로필 정보를 조회합니다.",
      "controls": [],
      "api": {
        "method": "POST",
        "uri": "me.get"
      }
    },
    {
      "tabId": "calendars.list",
      "tabName": "캘린더 목록",
      "description": "사용자의 캘린더 목록을 조회합니다.",
      "controls": [],
      "api": {
        "method": "POST",
        "uri": "calendars.list"
      }
    },
    {
      "tabId": "events.list",
      "tabName": "이벤트 목록",
      "description": "지정한 캘린더의 이벤트 목록을 조회합니다.",
      "controls": [
        {
          "controlType": "INPUT_TEXT",
          "label": "Calendar ID",
          "name": "calendarId",
          "placeholder": "비워두면 기본 캘린더 사용",
          "required": false
        },
        {
          "controlType": "INPUT_TEXT",
          "label": "Top (최대 개수)",
          "name": "top",
          "placeholder": "10",
          "required": false,
          "initialValue": "10"
        },
        {
          "controlType": "INPUT_TEXT",
          "label": "Order By",
          "name": "orderBy",
          "placeholder": "start/dateTime desc",
          "required": false,
          "initialValue": "start/dateTime desc"
        },
        {
          "controlType": "INPUT_TEXT",
          "label": "Select (조회 필드)",
          "name": "select",
          "placeholder": "subject,start,end,location",
          "required": false,
          "initialValue": "subject,start,end,location,organizer,webLink"
        }
      ],
      "api": {
        "method": "POST",
        "uri": "events.list"
      }
    },
    {
      "tabId": "events.create",
      "tabName": "이벤트 생성",
      "description": "새로운 캘린더 이벤트를 생성합니다.",
      "controls": [
        {
          "controlType": "INPUT_TEXT",
          "label": "Calendar ID",
          "name": "calendarId",
          "placeholder": "비워두면 기본 캘린더 사용",
          "required": false
        },
        {
          "controlType": "INPUT_TEXT",
          "label": "제목",
          "name": "subject",
          "placeholder": "회의 제목",
          "required": true
        },
        {
          "controlType": "TEXTAREA",
          "label": "내용",
          "name": "body",
          "placeholder": "회의 내용 (HTML 지원)",
          "required": false
        },
        {
          "controlType": "INPUT_TEXT",
          "label": "시작 일시",
          "name": "startDateTime",
          "placeholder": "2025-01-20T09:00:00",
          "required": true
        },
        {
          "controlType": "INPUT_TEXT",
          "label": "종료 일시",
          "name": "endDateTime",
          "placeholder": "2025-01-20T10:00:00",
          "required": true
        },
        {
          "controlType": "INPUT_TEXT",
          "label": "타임존",
          "name": "timeZone",
          "placeholder": "Asia/Seoul",
          "required": false,
          "initialValue": "Asia/Seoul"
        },
        {
          "controlType": "INPUT_TEXT",
          "label": "장소",
          "name": "location",
          "placeholder": "회의실 A",
          "required": false
        },
        {
          "controlType": "CHECKBOX",
          "label": "종일 일정",
          "name": "isAllDay",
          "required": false,
          "initialValue": "false"
        },
        {
          "controlType": "CHECKBOX",
          "label": "Teams 온라인 회의",
          "name": "isOnlineMeeting",
          "required": false,
          "initialValue": "false"
        }
      ],
      "api": {
        "method": "POST",
        "uri": "events.create"
      }
    },
    {
      "tabId": "events.delete",
      "tabName": "이벤트 삭제",
      "description": "지정한 이벤트를 삭제합니다.",
      "controls": [
        {
          "controlType": "INPUT_TEXT",
          "label": "Event ID",
          "name": "eventId",
          "placeholder": "이벤트 ID",
          "required": true
        }
      ],
      "api": {
        "method": "POST",
        "uri": "events.delete"
      }
    }
  ]
}
